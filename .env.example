# Database Configuration
DB_ENGINE=django.db.backends.postgresql
DB_NAME=pexilabs
DB_USER=postgres
DB_PASSWORD=password
DB_HOST=localhost
DB_PORT=5432

# For development, you can switch to SQLite by changing DB_ENGINE to:
# DB_ENGINE=django.db.backends.sqlite3
# DB_NAME=db.sqlite3

# Django Core Settings
SECRET_KEY=your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=testserver,localhost,127.0.0.1

# Email Configuration (Zoho Mail)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.zoho.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@domain.com
EMAIL_HOST_PASSWORD=your-email-password
DEFAULT_FROM_EMAIL=your-email@domain.com
SERVER_EMAIL=your-email@domain.com
EMAIL_TIMEOUT=60
EMAIL_DEBUG=True

# Security Settings
X_FRAME_OPTIONS=DENY

# Session Configuration
SESSION_COOKIE_AGE=1209600
SESSION_COOKIE_SECURE=False
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# Internationalization
LANGUAGE_CODE=en-us
TIME_ZONE=UTC
USE_I18N=True
USE_TZ=True

# Encryption Key
ENCRYPTION_KEY=your-base64-encoded-encryption-key

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:8080,http://127.0.0.1:8080
CORS_ALLOW_CREDENTIALS=True
CORS_ALLOW_ALL_ORIGINS=True

# Authentication URLs
LOGIN_URL=/
LOGOUT_URL=/auth/logout/
LOGIN_REDIRECT_URL=/dashboard/
LOGOUT_REDIRECT_URL=/

# Static and Media Files
STATIC_URL=static/
STATIC_ROOT=staticfiles
MEDIA_URL=media/
MEDIA_ROOT=media

# File Upload Settings
FILE_UPLOAD_MAX_MEMORY_SIZE=10485760
DATA_UPLOAD_MAX_MEMORY_SIZE=10485760
FILE_UPLOAD_PERMISSIONS=0o644
SECURE_FILE_UPLOADS=True
ALLOWED_FILE_EXTENSIONS=.pdf,.jpg,.jpeg,.png,.doc,.docx


